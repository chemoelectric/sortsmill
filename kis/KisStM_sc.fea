@e.c2    = [Eacute.c2 Egrave.c2 Ecircumflex.c2 Edieresis.c2 Ecaron.c2 Ebreve.c2 Edotaccent.c2 Emacron.c2 Eogonek.c2];

@g.upper = [Gcircumflex    Gbreve    Gdotaccent    Gcommaaccent];
